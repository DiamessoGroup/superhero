<div class="card">
	<div class="card-header">
		<%= @team_number > 0 ? "Your Superhero Team" : "How Many Team Members Do You Want?" %>
	</div>
	<div class="card-body">
		<% if @team_number > 0 %>
			<h2>You have picked <%= @team_number %> Team Members.</h2>
			<% @team_number.times do %>
				<%= render "home/show_team" %>
				<hr>
				<% hero_content %>
			<% end %>
		<% else %>
			<%= render "home/create_team" %>
		<% end %>

	</div>
	<!--	<div class="card-footer text-muted">-->
	<!--		Create A Whole SuperHero Team-->
	<!--	</div>-->
</div>
